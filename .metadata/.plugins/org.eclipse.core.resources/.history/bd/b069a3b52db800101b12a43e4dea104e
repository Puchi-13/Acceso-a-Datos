import com.mongodb.client.*;
import com.mongodb.client.model.Filters;
import com.google.gson.Gson;
import org.bson.Document;

import java.util.ArrayList;

public class Practica_Ampliacion_1 {

    public static void main(String[] args) {

        // Conexi√≥n MongoDB
        MongoClient cliente = MongoClients.create();
        MongoDatabase db = cliente.getDatabase("Concesionari");
        MongoCollection<Document> coleccionPersonas = db.getCollection("Personas");

        // ArrayList para almacenar personas
        ArrayList<Persona> listaPersonas = new ArrayList<>();
        Gson gson = new Gson();

        // Buscar personas de London
        MongoCursor<Document> cursor = coleccionPersonas.find(Filters.eq("City", "London")).iterator();

        while(cursor.hasNext()) {
            Document doc = cursor.next();
            // Convertir Document a JSON y luego a POJO Persona
            Persona p = gson.fromJson(doc.toJson(), Persona.class);
            listaPersonas.add(p);
        }

        // Mostrar resultados
        for(Persona p : listaPersonas) {
            System.out.println(p);
        }

        cliente.close();
    }
}
